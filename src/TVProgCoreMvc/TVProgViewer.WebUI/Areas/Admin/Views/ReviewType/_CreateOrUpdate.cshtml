@model ReviewTypeModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ProductReviewTypeTop, additionalData = Model })
                <div class="card card-default">
                    <div class="card-body">
                        @(await Html.LocalizedEditorAsync<ReviewTypeModel, ReviewTypeLocalizedModel>("review-type-localized",
                                @<div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <tvprog-label asp-for="@Model.Locales[item].Name" />
                                        </div>
                                        <div class="col-md-9">
                                            <tvprog-editor asp-for="@Model.Locales[item].Name" />
                                            <span asp-validation-for="@Model.Locales[item].Name"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <tvprog-label asp-for="@Model.Locales[item].Description" />
                                        </div>
                                        <div class="col-md-9">
                                            <tvprog-editor asp-for="@Model.Locales[item].Description" asp-template="RichEditor" />
                                            <span asp-validation-for="@Model.Locales[item].Description"></span>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>
      ,
                                                @<div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <tvprog-label asp-for="Name" />
                                                        </div>
                                                        <div class="col-md-9">
                                                            <tvprog-editor asp-for="Name" asp-required="true" />
                                                            <span asp-validation-for="Name"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <tvprog-label asp-for="Description" />
                                                        </div>
                                                        <div class="col-md-9">
                                                            <tvprog-editor asp-for="Description" asp-required="true" asp-template="RichEditor" />
                                                            <span asp-validation-for="Description"></span>
                                                        </div>
                                                    </div>
                                                </div>
                      ))
                        <div class="form-group row">
                            <div class="col-md-3">
                                <tvprog-label asp-for="DisplayOrder" />
                            </div>
                            <div class="col-md-9">
                                <tvprog-editor asp-for="DisplayOrder" />
                                <span asp-validation-for="DisplayOrder"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <tvprog-label asp-for="IsRequired" />
                            </div>
                            <div class="col-md-9">
                                <tvprog-editor asp-for="IsRequired" />
                                <span asp-validation-for="IsRequired"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <tvprog-label asp-for="VisibleToAllUsers" />
                            </div>
                            <div class="col-md-9">
                                <tvprog-editor asp-for="VisibleToAllUsers" />
                                <span asp-validation-for="VisibleToAllUsers"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ProductReviewTypeBottom, additionalData = Model })
            </div>
        </div>
    </div>
</section>