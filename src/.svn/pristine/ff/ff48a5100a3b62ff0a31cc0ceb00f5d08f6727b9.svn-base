        /// <param name="sender"></param>
        /// <param name="e"></param>
        private void rbAnonsIfitis_CheckedChanged(object sender, EventArgs e)
        {
            if (rbAnonsIfitis.Checked) Settings.Default.AnonsMode = "Ifitis";
        }

