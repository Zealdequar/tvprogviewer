<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target xsi:type="File" name="dbupdater" fileName="${basedir}/${shortdate}/dbupdater.log" layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="webupdater" fileName="${basedir}/${shortdate}/webupdater.log" layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="ColoredConsole" name="dbupdaterCons" layout="${longdate} ${uppercase:${level}} ${message}"/>
    <target xsi:type="ColoredConsole" name="webupdaterCons" layout="${longdate} ${uppercase:${level}} ${message}"/>
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="dbupdate" minlevel="Trace" writeTo="dbupdater,dbupdaterCons" />
    <logger name="webupdate" minlevel="Trace" writeTo="webupdater,webupdaterCons" />
  </rules>
</nlog>