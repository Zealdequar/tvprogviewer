using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace TVProgViewer.Classes
{
    static class Util
    {
        /// <summary>
        /// Конвертация даты 23.11.2011 17:25:00 в строку типа "20111123172500 +0400"
        /// </summary>
        /// <param name="dateTime">Дата</param>
        /// <returns>Строка</returns>
        public static string ConvertDateTime (DateTime dateTime)
        {
            return String.Format("{0}{1:D2}{2:D2}{3:D2}{4:D2}{5:D2} +0400",
                                            dateTime.Year, dateTime.Month, dateTime.Day,
                                            dateTime.Hour, dateTime.Minute, dateTime.Second);
        }
    }
}
