@model FooterModel

@using TvProgViewer.Core
@using TvProgViewer.Core.Domain.Tax
@using TvProgViewer.Core.Domain.Topics

@inject IWorkContext workContext

<div id="footer" class="footer">
    <div class="footer-upper">
        <div class="footer-block information">
            <div class="title">
                <strong>@T("Footer.Information")</strong>
            </div>
            <ul class="list">
                @if (Model.SitemapEnabled && Model.DisplaySitemapFooterItem)
                {
                    <li><a href="@Url.RouteUrl("Sitemap")">@T("Sitemap")</a></li>
                }
                @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn1).ToList())
                {
                    <li><a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a></li>
                }
                @if (Model.DisplayContactUsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
                }
            </ul>
        </div>
        <div class="footer-block user-service">
            <div class="title">
                <strong>@T("Footer.UserService")</strong>
            </div>
            <ul class="list">
                @if (Model.SearchEnabled && Model.DisplayTvChannelSearchFooterItem)
                {
                    <li><a href="@Url.RouteUrl("TvSearch")">@T("Search")</a> </li>
                }
                @if (Model.NewsEnabled && Model.DisplayNewsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("NewsArchive")">@T("News")</a></li>
                }
                @if (Model.BlogEnabled && Model.DisplayBlogFooterItem)
                {
                    <li><a href="@Url.RouteUrl("Blog")">@T("Blog")</a></li>
                }
                @if (Model.ForumEnabled && Model.DisplayForumsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("Boards")">@T("Forum.Forums")</a></li>
                }
                @if (Model.RecentlyViewedTvChannelsEnabled && Model.DisplayRecentlyViewedTvChannelsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("RecentlyViewedTvChannels")">@T("TvChannels.RecentlyViewedTvChannels")</a></li>
                }
                @if (Model.CompareTvChannelsEnabled && Model.DisplayCompareTvChannelsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("CompareTvChannels")">@T("TvChannels.Compare.List")</a></li>
                }
                @if (Model.NewTvChannelsEnabled && Model.DisplayNewTvChannelsFooterItem)
                {
                    <li><a href="@Url.RouteUrl("NewTvChannels")">@T("TvChannels.NewTvChannels")</a></li>
                }
                @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn2).ToList())
                {
                    <li><a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a></li>
                }
                @if (Model.AllowUsersToCheckGiftCardBalance)
                {
                    <li><a href="@Url.RouteUrl("CheckGiftCardBalance")">@T("CheckGiftCardBalance")</a></li>
                }
            </ul>
        </div>
        <div class="footer-block my-account">
            <div class="title">
                <strong>@T("Footer.MyAccount")</strong>
            </div>
            <ul class="list">
                @if (Model.DisplayUserInfoFooterItem)
                {
                    <li><a href="@Url.RouteUrl("UserInfo")">@T("Account.MyAccount")</a></li>
                }
                @if (Model.DisplayUserOrdersFooterItem)
                {
                    <li><a href="@Url.RouteUrl("UserOrders")">@T("Account.UserOrders")</a></li>
                }
                @if (Model.DisplayUserAddressesFooterItem)
                {
                    <li><a href="@Url.RouteUrl("UserAddresses")">@T("Account.UserAddresses")</a></li>
                }
                @if (Model.ShoppingCartEnabled && Model.DisplayShoppingCartFooterItem)
                {
                    <li><a href="@Url.RouteUrl("ShoppingCart")">@T("ShoppingCart")</a></li>
                }
                @if (Model.WishlistEnabled && Model.DisplayWishlistFooterItem)
                {
                    <li><a href="@Url.RouteUrl("Wishlist")">@T("Wishlist")</a></li>
                }
                @if (Model.AllowUsersToApplyForVendorAccount && Model.DisplayApplyVendorAccountFooterItem)
                {
                    <li><a href="@Url.RouteUrl("ApplyVendorAccount")">@T("Vendors.ApplyAccount")</a></li>
                }
                @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn3).ToList())
                {
                    <li><a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">@topic.Name</a></li>
                }
            </ul>
        </div>
        <div class="footer-block follow-us">
            <div class="sociality">
                <div class="title">
                    <strong>@T("Footer.FollowUs")</strong>
                </div>
                @await Component.InvokeAsync(typeof(SocialButtonsViewComponent))
            </div>
            @*  @await Component.InvokeAsync(typeof(NewsletterBoxViewComponent)) *@
        </div>
    </div>
    <div class="footer-lower">
        <div class="footer-info">
            <span class="footer-disclaimer">@T("Content.CopyrightNotice", "2012 — " + DateTime.Now.Year.ToString(), Model.StoreName)</span>
            @if (Model.DisplayTaxShippingInfoFooter)
            {
                var inclTax = await workContext.GetTaxDisplayTypeAsync() == TaxDisplayType.IncludingTax;
                <span class="footer-tax-shipping">
                    @T(inclTax ? "Footer.TaxShipping.InclTax" : "Footer.TaxShipping.ExclTax", Url.RouteTopicUrl("shippinginfo"))
                </span>
            }
        </div>
        @if (!Model.HidePoweredByTvProgViewer)
        {
            <div class="footer-powered-by">
                @*Would you like to remove the "Powered by tvProgViewer" link in the bottom of the footer?
                    Please find more info at https://tvprogviewer.ru/tvprogviwer-copyright-removal-key*@
                Powered by <a href="@(OfficialSite.Main)" target="_blank" @(Model.IsHomePage ? string.Empty : "rel=nofollow")>tvProgViewer</a>
            </div>
        }
        @await Component.InvokeAsync(typeof(StoreThemeSelectorViewComponent))
    </div>
    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.Footer, additionalData = Model })
</div>
