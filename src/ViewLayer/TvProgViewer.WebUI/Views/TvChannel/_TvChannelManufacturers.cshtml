@model IList<ManufacturerBriefInfoModel>

@using TvProgViewer.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <div class="manufacturers">
        @if (Model.Count == 1)
        {
            <span class="label">@T("TvChannels.Manufacturer"):</span>
        }
        else
        {
            <span class="label">@T("TvChannels.Manufacturers"):</span>
        }
        <span class="value">
            @for (var i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <a href="@(Url.RouteUrl<Manufacturer>(new { SeName = item.SeName }))">@item.Name</a>
                if (i != Model.Count - 1)
                {
                    <span class="separator">,</span>
                }
            }
        </span>
    </div>
}