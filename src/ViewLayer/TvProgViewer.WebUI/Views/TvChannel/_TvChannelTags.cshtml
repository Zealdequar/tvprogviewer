@model IList<TvChannelTagModel>

@using TvProgViewer.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <div class="tvchannel-tags-box">
        <div class="title">
            <strong>@T("TvChannels.Tags")</strong>
        </div>
        <div class="tvchannel-tags-list">
            <ul>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <li class="tag">
                        <a href="@(Url.RouteUrl<TvChannelTag>(new { SeName = Model[i].SeName }))" class="tvchanneltag">
                            @Model[i].Name
                        </a> <span>@T("TvChannels.Tags.Count", Model[i].TvChannelCount)</span>
                    </li>
                    if (i != Model.Count - 1)
                    {
                        <li class="separator">,</li>
                    }
                }
            </ul>
        </div>
    </div>
}