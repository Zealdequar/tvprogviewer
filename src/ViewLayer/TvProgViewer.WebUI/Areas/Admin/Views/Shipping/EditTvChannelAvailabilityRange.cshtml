@model TvChannelAvailabilityRangeModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.EditTvChannelAvailabilityRangeDetails").Text;
    //active menu item (system name)
    TvProgHtml.SetActiveMenuItemSystemName("Dates and ranges");
}


<form asp-controller="Shipping" asp-action="EditTvChannelAvailabilityRange" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.EditTvChannelAvailabilityRangeDetails") - @Model.Name 
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="DatesAndRanges">@T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="tvchannel-availability-range-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.TvChannelAvailabilityRangeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateTvChannelAvailabilityRange", Model)
</form>
<tvprog-delete-confirmation asp-model-id="@Model.Id" asp-button-id="tvchannel-availability-range-delete" asp-action="DeleteTvChannelAvailabilityRange" />
