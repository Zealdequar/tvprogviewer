@model TvChannelAvailabilityRangeModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.AddNew").Text;
    //active menu item (system name)
    TvProgHtml.SetActiveMenuItemSystemName("Dates and ranges");
}

<form asp-controller="Shipping" asp-action="CreateTvChannelAvailabilityRange" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="DatesAndRanges">@T("Admin.Configuration.Shipping.TvChannelAvailabilityRanges.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.TvChannelAvailabilityRangeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateTvChannelAvailabilityRange", Model)
</form>