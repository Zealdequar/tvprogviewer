@model ShippingMethodModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ShippingMethodDetailsTop, additionalData = Model })
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        @(await Html.LocalizedEditorAsync<ShippingMethodModel, ShippingMethodLocalizedModel>("shipping-method-localized",
                                @<div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <tvprog-label asp-for="@Model.Locales[item].Name" />
                                        </div>
                                        <div class="col-md-9">
                                            <tvprog-editor asp-for="@Model.Locales[item].Name" />
                                            <span asp-validation-for="@Model.Locales[item].Name"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <tvprog-label asp-for="@Model.Locales[item].Description" />
                                        </div>
                                        <div class="col-md-9">
                                            <tvprog-textarea asp-for="@Model.Locales[item].Description"></tvprog-textarea>
                                            <span asp-validation-for="@Model.Locales[item].Description"></span>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>
      ,
                                                @<div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <tvprog-label asp-for="Name" />
                                                        </div>
                                                        <div class="col-md-9">
                                                            <tvprog-editor asp-for="Name" asp-required="true" />
                                                            <span asp-validation-for="Name"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <tvprog-label asp-for="Description" />
                                                        </div>
                                                        <div class="col-md-9">
                                                            <tvprog-textarea asp-for="Description"></tvprog-textarea>
                                                            <span asp-validation-for="Description"></span>
                                                        </div>
                                                    </div>
                                                </div>
                      ))
                        <div class="form-group row">
                            <div class="col-md-3">
                                <tvprog-label asp-for="DisplayOrder" />
                            </div>
                            <div class="col-md-9">
                                <tvprog-editor asp-for="DisplayOrder" />
                                <span asp-validation-for="DisplayOrder"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ShippingMethodDetailsBottom, additionalData = Model })
        </div>
    </div>
</section>