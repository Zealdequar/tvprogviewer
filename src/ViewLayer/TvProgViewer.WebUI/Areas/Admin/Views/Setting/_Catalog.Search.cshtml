@model CatalogSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ProductSearchEnabled_OverrideForStore" asp-input="ProductSearchEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ProductSearchEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ProductSearchEnabled" />
            <span asp-validation-for="ProductSearchEnabled"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ProductSearchAutoCompleteEnabled_OverrideForStore" asp-input="ProductSearchAutoCompleteEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ProductSearchAutoCompleteEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ProductSearchAutoCompleteEnabled" />
            <span asp-validation-for="ProductSearchAutoCompleteEnabled"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="ProductSearchAutoCompleteEnabled">
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="ProductSearchAutoCompleteNumberOfProducts_OverrideForStore" asp-input="ProductSearchAutoCompleteNumberOfProducts" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="ProductSearchAutoCompleteNumberOfProducts" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="ProductSearchAutoCompleteNumberOfProducts" />
                <span asp-validation-for="ProductSearchAutoCompleteNumberOfProducts"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="ShowLinkToAllResultInSearchAutoComplete_OverrideForStore" asp-input="ShowLinkToAllResultInSearchAutoComplete" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="ShowLinkToAllResultInSearchAutoComplete" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="ShowLinkToAllResultInSearchAutoComplete" />
                <span asp-validation-for="ShowLinkToAllResultInSearchAutoComplete"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="ShowProductImagesInSearchAutoComplete_OverrideForStore" asp-input="ShowProductImagesInSearchAutoComplete" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="ShowProductImagesInSearchAutoComplete" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="ShowProductImagesInSearchAutoComplete" />
                <span asp-validation-for="ShowProductImagesInSearchAutoComplete"></span>
            </div>
        </div>
    </tvprog-nested-setting>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ProductSearchTermMinimumLength_OverrideForStore" asp-input="ProductSearchTermMinimumLength" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ProductSearchTermMinimumLength" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ProductSearchTermMinimumLength" />
            <span asp-validation-for="ProductSearchTermMinimumLength"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="SearchPageAllowUsersToSelectPageSize_OverrideForStore" asp-input="SearchPageAllowUsersToSelectPageSize" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="SearchPageAllowUsersToSelectPageSize" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="SearchPageAllowUsersToSelectPageSize" />
            <span asp-validation-for="SearchPageAllowUsersToSelectPageSize"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="SearchPageAllowUsersToSelectPageSize" disable-auto-generation="true">
        <div class="form-group row advanced-setting" id="pnlSearchPageProductsPerPage">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="SearchPageProductsPerPage_OverrideForStore" asp-input="SearchPageProductsPerPage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="SearchPageProductsPerPage" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="SearchPageProductsPerPage" />
                <span asp-validation-for="SearchPageProductsPerPage"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting" id="pnlSearchPagePageSizeOptions">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="SearchPagePageSizeOptions_OverrideForStore" asp-input="SearchPagePageSizeOptions" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="SearchPagePageSizeOptions" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="SearchPagePageSizeOptions" />
                <span asp-validation-for="SearchPagePageSizeOptions"></span>
            </div>
        </div>
    </tvprog-nested-setting>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="SearchPagePriceRangeFiltering_OverrideForStore" asp-input="SearchPagePriceRangeFiltering" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="SearchPagePriceRangeFiltering" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="SearchPagePriceRangeFiltering" />
            <span asp-validation-for="SearchPagePriceRangeFiltering"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="SearchPagePriceRangeFiltering">
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="SearchPageManuallyPriceRange_OverrideForStore" asp-input="SearchPageManuallyPriceRange" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="SearchPageManuallyPriceRange" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="SearchPageManuallyPriceRange" />
                <span asp-validation-for="SearchPageManuallyPriceRange"></span>
            </div>
        </div>
        <tvprog-nested-setting asp-for="SearchPageManuallyPriceRange">
            <div class="form-group row advanced-setting">
                <div class="col-md-3">
                    <tvprog-override-store-checkbox asp-for="SearchPagePriceFrom_OverrideForStore" asp-input="SearchPagePriceFrom" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                    <tvprog-label asp-for="SearchPagePriceFrom" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="SearchPagePriceFrom" asp-postfix="@Model.PrimaryStoreCurrencyCode" />
                    <span asp-validation-for="SearchPagePriceFrom"></span>
                </div>
            </div>
            <div class="form-group row advanced-setting">
                <div class="col-md-3">
                    <tvprog-override-store-checkbox asp-for="SearchPagePriceTo_OverrideForStore" asp-input="SearchPagePriceTo" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                    <tvprog-label asp-for="SearchPagePriceTo" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="SearchPagePriceTo" asp-postfix="@Model.PrimaryStoreCurrencyCode" />
                    <span asp-validation-for="SearchPagePriceTo"></span>
                </div>
            </div>
        </tvprog-nested-setting>
    </tvprog-nested-setting>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowUsersToSearchWithManufacturerName_OverrideForStore" asp-input="AllowUsersToSearchWithManufacturerName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowUsersToSearchWithManufacturerName" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowUsersToSearchWithManufacturerName" />
            <span asp-validation-for="AllowUsersToSearchWithManufacturerName"></span>
        </div>
    </div>
     <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowUsersToSearchWithCategoryName_OverrideForStore" asp-input="AllowUsersToSearchWithCategoryName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowUsersToSearchWithCategoryName" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowUsersToSearchWithCategoryName" />
            <span asp-validation-for="AllowUsersToSearchWithCategoryName"></span>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.SearchPageAllowUsersToSelectPageSize)").click(toggleSearchPagePageSize);

        toggleSearchPagePageSize();
    });

    function toggleSearchPagePageSize() {
        if ($('#@Html.IdFor(model => model.SearchPageAllowUsersToSelectPageSize)').is(':checked')) {
            $('#pnlSearchPageProductsPerPage').hideElement();
            $('#pnlSearchPagePageSizeOptions').showElement();
        } else {
            $('#pnlSearchPageProductsPerPage').showElement();
            $('#pnlSearchPagePageSizeOptions').hideElement();
        }
    }

</script>