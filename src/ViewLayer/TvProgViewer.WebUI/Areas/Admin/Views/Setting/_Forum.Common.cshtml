@model ForumSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ForumsEnabled_OverrideForStore" asp-input="ForumsEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ForumsEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ForumsEnabled" />
            <span asp-validation-for="ForumsEnabled"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="RelativeDateTimeFormattingEnabled_OverrideForStore" asp-input="RelativeDateTimeFormattingEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="RelativeDateTimeFormattingEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="RelativeDateTimeFormattingEnabled" />
            <span asp-validation-for="RelativeDateTimeFormattingEnabled"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="SignaturesEnabled_OverrideForStore" asp-input="SignaturesEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="SignaturesEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="SignaturesEnabled" />
            <span asp-validation-for="SignaturesEnabled"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ShowUsersPostCount_OverrideForStore" asp-input="ShowUsersPostCount" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ShowUsersPostCount" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ShowUsersPostCount" />
            <span asp-validation-for="ShowUsersPostCount"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ForumEditor_OverrideForStore" asp-input="ForumEditor" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ForumEditor" />
        </div>
        <div class="col-md-9">
            <tvprog-select asp-for="ForumEditor" asp-items="Model.ForumEditorValues" />
            <span asp-validation-for="ForumEditor"></span>
        </div>
    </div>
</div>