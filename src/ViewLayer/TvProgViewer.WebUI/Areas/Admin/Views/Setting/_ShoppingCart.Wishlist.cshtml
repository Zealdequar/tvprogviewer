@model ShoppingCartSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="MaximumWishlistItems_OverrideForStore" asp-input="MaximumWishlistItems" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="MaximumWishlistItems" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="MaximumWishlistItems" />
            <span asp-validation-for="MaximumWishlistItems"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ShowTvChannelImagesOnWishList_OverrideForStore" asp-input="ShowTvChannelImagesOnWishList" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ShowTvChannelImagesOnWishList" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ShowTvChannelImagesOnWishList" />
            <span asp-validation-for="ShowTvChannelImagesOnWishList"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="EmailWishlistEnabled_OverrideForStore" asp-input="EmailWishlistEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="EmailWishlistEnabled" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="EmailWishlistEnabled" />
            <span asp-validation-for="EmailWishlistEnabled"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="EmailWishlistEnabled">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="AllowAnonymousUsersToEmailWishlist_OverrideForStore" asp-input="AllowAnonymousUsersToEmailWishlist" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="AllowAnonymousUsersToEmailWishlist" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="AllowAnonymousUsersToEmailWishlist" />
                <span asp-validation-for="AllowAnonymousUsersToEmailWishlist"></span>
            </div>
        </div>
    </tvprog-nested-setting>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowOutOfStockItemsToBeAddedToWishlist_OverrideForStore" asp-input="AllowOutOfStockItemsToBeAddedToWishlist" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowOutOfStockItemsToBeAddedToWishlist" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowOutOfStockItemsToBeAddedToWishlist" />
            <span asp-validation-for="AllowOutOfStockItemsToBeAddedToWishlist"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="MoveItemsFromWishlistToCart_OverrideForStore" asp-input="MoveItemsFromWishlistToCart" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="MoveItemsFromWishlistToCart" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="MoveItemsFromWishlistToCart" />
            <span asp-validation-for="MoveItemsFromWishlistToCart"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="DisplayWishlistAfterAddingTvChannel_OverrideForStore" asp-input="DisplayWishlistAfterAddingTvChannel" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="DisplayWishlistAfterAddingTvChannel" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="DisplayWishlistAfterAddingTvChannel" />
            <span asp-validation-for="DisplayWishlistAfterAddingTvChannel"></span>
        </div>
    </div>
</div>