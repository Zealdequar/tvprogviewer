@model CatalogSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowTvChannelViewModeChanging_OverrideForStore" asp-input="AllowTvChannelViewModeChanging" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowTvChannelViewModeChanging" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowTvChannelViewModeChanging" />
