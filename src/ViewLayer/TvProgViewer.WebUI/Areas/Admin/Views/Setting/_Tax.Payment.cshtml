@model TaxSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="PaymentMethodAdditionalFeeIsTaxable_OverrideForStore" asp-input="PaymentMethodAdditionalFeeIsTaxable" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="PaymentMethodAdditionalFeeIsTaxable" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="PaymentMethodAdditionalFeeIsTaxable" />
            <span asp-validation-for="PaymentMethodAdditionalFeeIsTaxable"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="PaymentMethodAdditionalFeeIsTaxable">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="PaymentMethodAdditionalFeeIncludesTax_OverrideForStore" asp-input="PaymentMethodAdditionalFeeIncludesTax" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="PaymentMethodAdditionalFeeIncludesTax" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="PaymentMethodAdditionalFeeIncludesTax" />
                <span asp-validation-for="PaymentMethodAdditionalFeeIncludesTax"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="PaymentMethodAdditionalFeeTaxClassId_OverrideForStore" asp-input="PaymentMethodAdditionalFeeTaxClassId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="PaymentMethodAdditionalFeeTaxClassId" />
            </div>
            <div class="col-md-9">
                <tvprog-select asp-for="PaymentMethodAdditionalFeeTaxClassId" asp-items="Model.TaxCategories" />
                <span asp-validation-for="PaymentMethodAdditionalFeeTaxClassId"></span>
            </div>
        </div>
    </tvprog-nested-setting>
</div>