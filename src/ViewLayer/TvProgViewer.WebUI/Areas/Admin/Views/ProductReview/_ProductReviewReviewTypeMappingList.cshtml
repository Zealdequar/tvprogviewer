@model ProductReviewReviewTypeMappingSearchModel

@await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ProductReviewDetailsTop, additionalData = Model })
<div class="card card-default">
    <div class="card-header">
        @T("Admin.Settings.ReviewType")
    </div>
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
   {
       Name = "reviewext-grid",
       UrlRead = new DataUrl("ProductReviewReviewTypeMappingList", "ProductReview", new RouteValueDictionary { [nameof(Model.ProductReviewId)] = Model.ProductReviewId }),
       Length = Model.PageSize,
       LengthMenu = Model.AvailablePageSizes,
       ColumnCollection = new List<ColumnProperty>
            {
                new ColumnProperty(nameof(ProductReviewReviewTypeMappingModel.Name))
                {
                    Title = T("Admin.Catalog.AdditionalProductReviews.Fields.Name").Text,
                    Width = "300"
                },
                new ColumnProperty(nameof(ProductReviewReviewTypeMappingModel.Rating))
                {
                    Title = T("Admin.Catalog.AdditionalProductReviews.Fields.Rating").Text,
                    Width = "100"
                },
                new ColumnProperty(nameof(ProductReviewReviewTypeMappingModel.VisibleToAllUsers))
                {
                    Title = T("Admin.Catalog.AdditionalProductReviews.Fields.VisibleToAllUsers").Text,
                    Width = "100",
                    ClassName = TvProgColumnClassDefaults.CenterAll,
                    Render = new RenderBoolean()
                }
            }
   })
    </div>
</div>
