@model AffiliateModel
<div class="card-body">
    @await Html.PartialAsync("Table", new DataTablesModel
    {
        Name = "users-grid",
        UrlRead = new DataUrl("AffiliatedUserList", "Affiliate", new RouteValueDictionary { [nameof(Model.AffiliatedUserSearchModel.AffliateId)] = Model.AffiliatedUserSearchModel.AffliateId }),
        Length = Model.AffiliatedUserSearchModel.PageSize,
        LengthMenu = Model.AffiliatedUserSearchModel.AvailablePageSizes,
        ColumnCollection = new List<ColumnProperty>
        {
            new ColumnProperty(nameof(AffiliatedUserModel.Id))
            {
                Title = "ID",
                Width = "50"
            },
            new ColumnProperty(nameof(AffiliatedUserModel.Name))
            {
                Title = T("Admin.Affiliates.Users.Name").Text,
                Width = "200"
            },
            new ColumnProperty(nameof(AffiliatedUserModel.Id))
            {
                Title = T("Admin.Common.View").Text,
                Width = "150",
                ClassName = TvProgColumnClassDefaults.Button,
                Render = new RenderButtonView(new DataUrl("~/Admin/User/Edit/", nameof(AffiliatedUserModel.Id)))
            }
        }
    })
</div>
