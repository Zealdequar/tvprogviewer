@model TvChannelTagModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Catalog.TvChannelTags.EditTagDetails").Text;
    //active menu item (system name)
    TvProgHtml.SetActiveMenuItemSystemName("TvChannel tags");
}

<form asp-controller="TvChannel" asp-action="EditTvChannelTag" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Catalog.TvChannelTags.EditTagDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="TvChannelTags">@T("Admin.Catalog.TvChannelTags.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="tvChanneltag-delete" class="btn bg-red">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.TvChannelTagDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateTvChannelTag", Model)
</form>
<tvprog-delete-confirmation asp-model-id="@Model.Id" asp-button-id="tvChanneltag-delete" asp-action="TvChannelTagDelete" /> 