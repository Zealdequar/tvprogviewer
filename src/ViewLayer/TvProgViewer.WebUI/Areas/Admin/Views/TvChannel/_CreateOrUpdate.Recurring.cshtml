@model TvChannelModel
@using TvProgViewer.Core.Domain.Catalog;
@using TvProgViewer.Services

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-label asp-for="IsRecurring" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="IsRecurring" />
            <span asp-validation-for="IsRecurring"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="IsRecurring">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="RecurringCycleLength" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="RecurringCycleLength" />
                <span asp-validation-for="RecurringCycleLength"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="RecurringCyclePeriodId" />
            </div>
            <div class="col-md-9">
                <tvprog-select asp-for="RecurringCyclePeriodId" asp-items="@await (((RecurringTvChannelCyclePeriod)Model.RecurringCyclePeriodId).ToSelectListAsync())" />
                <span asp-validation-for="RecurringCyclePeriodId"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="RecurringTotalCycles" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="RecurringTotalCycles" />
                <span asp-validation-for="RecurringTotalCycles"></span>
            </div>
        </div>
    </tvprog-nested-setting>
</div>