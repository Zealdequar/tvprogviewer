@model TvChannelModel
@using TvProgViewer.Core.Domain.Catalog;
@using TvProgViewer.Services

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-label asp-for="IsRental" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="IsRental" />
            <span asp-validation-for="IsRental"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="IsRental">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="RentalPriceLength" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="RentalPriceLength" />
                <span asp-validation-for="RentalPriceLength"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="RentalPricePeriodId" />
            </div>
            <div class="col-md-9">
                <tvprog-select asp-for="RentalPricePeriodId" asp-items="@await (((RentalPricePeriod)Model.RentalPricePeriodId).ToSelectListAsync())" />
                <span asp-validation-for="RentalPricePeriodId"></span>
            </div>
        </div>
    </tvprog-nested-setting>
</div>