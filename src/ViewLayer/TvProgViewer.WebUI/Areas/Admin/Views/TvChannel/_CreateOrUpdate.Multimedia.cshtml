@model TvChannelModel

<div class="card-body">
    @if (Model.Id > 0)
    {
		<tvprog-tabs id="tvChannelmultimedia-edit" asp-tab-name-to-select="tab-pictures" asp-render-selected-tab-input="false">
			<tvprog-tab asp-name="tab-pictures" asp-title="@T("Admin.Catalog.TvChannels.Multimedia.Pictures")" asp-default="true">@await Html.PartialAsync("_CreateOrUpdate.Multimedia.Pictures", Model)</tvprog-tab>
			<tvprog-tab asp-name="tab-videos" asp-title="@T("Admin.Catalog.TvChannels.Multimedia.Videos")">@await Html.PartialAsync("_CreateOrUpdate.Multimedia.Videos", Model)</tvprog-tab>
		</tvprog-tabs>
    }
    else
    {
        <div class="card card-default">
            <div class="card-body">
                @T("Admin.Catalog.TvChannels.Multimedia.SaveBeforeEdit")
            </div>
        </div>
    }    
</div>