@model TvChannelModel

@using TvProgViewer.Core.Domain.Catalog;
@using TvProgViewer.Services

 <div class="card-body">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="IsGiftCard" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="IsGiftCard" />
                <span asp-validation-for="IsGiftCard"></span>
            </div>
        </div>
        <tvprog-nested-setting asp-for="IsGiftCard">
            <div class="form-group row">
                <div class="col-md-3">
                    <tvprog-label asp-for="GiftCardTypeId" />
                </div>
                <div class="col-md-9">
                    <tvprog-select asp-for="GiftCardTypeId" asp-items="@await (((GiftCardType)Model.GiftCardTypeId).ToSelectListAsync())" />
                    <span asp-validation-for="GiftCardTypeId"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <tvprog-label asp-for="OverriddenGiftCardAmount" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="OverriddenGiftCardAmount" />
                    <span asp-validation-for="OverriddenGiftCardAmount"></span>
                </div>
            </div>
        </tvprog-nested-setting>
    </div>