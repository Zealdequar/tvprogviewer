@model TvChannelModel

<div class="card-body">
    <div id="tvChannel-shipping-area">
        <div class="form-group row">
            <div class="col-md-3">
                <tvprog-label asp-for="IsShipEnabled" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="IsShipEnabled" />
                <span asp-validation-for="IsShipEnabled"></span>
            </div>
        </div>
        <tvprog-nested-setting asp-for="IsShipEnabled">
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.Weight ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="Weight" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="Weight" asp-postfix="@Model.BaseWeightIn" />
                    <span asp-validation-for="Weight"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="Length" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="Length" asp-postfix="@Model.BaseDimensionIn" />
                    <span asp-validation-for="Length"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="Width" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="Width" asp-postfix="@Model.BaseDimensionIn" />
                    <span asp-validation-for="Width"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="Height" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="Height" asp-postfix="@Model.BaseDimensionIn" />
                    <span asp-validation-for="Height"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.FreeShipping ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="IsFreeShipping" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="IsFreeShipping" />
                    <span asp-validation-for="IsFreeShipping"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.ShipSeparately ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="ShipSeparately" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="ShipSeparately" />
                    <span asp-validation-for="ShipSeparately"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.AdditionalShippingCharge ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="AdditionalShippingCharge" />
                </div>
                <div class="col-md-9">
                    <tvprog-editor asp-for="AdditionalShippingCharge" asp-postfix="@Model.PrimaryStoreCurrencyCode" />
                    <span asp-validation-for="AdditionalShippingCharge"></span>
                </div>
            </div>
            <div class="form-group row @(Model.TvChannelEditorSettingsModel.DeliveryDate ? null : "advanced-setting")">
                <div class="col-md-3">
                    <tvprog-label asp-for="DeliveryDateId" />
                </div>
                <div class="col-md-9">
                    <tvprog-select asp-for="DeliveryDateId" asp-items="Model.AvailableDeliveryDates" />
                    <span asp-validation-for="DeliveryDateId"></span>
                </div>
            </div>
        </tvprog-nested-setting>
    </div>
</div>