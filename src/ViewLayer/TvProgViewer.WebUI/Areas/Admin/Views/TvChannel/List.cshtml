                                                <tvprog-label asp-for="SearchVendorId" />
                                            </div>
                                            <div class="col-md-8">
                                                <tvprog-select asp-for="SearchVendorId" asp-items="Model.AvailableVendors" />
                                            </div>
                                        </div>
                                    </div>
