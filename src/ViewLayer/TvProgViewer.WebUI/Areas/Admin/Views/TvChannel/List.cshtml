                                                <tvprog-label asp-for="SearchWarehouseId" />
                                            </div>
                                            <div class="col-md-8">
                                                <tvprog-select asp-for="SearchWarehouseId" asp-items="Model.AvailableWarehouses" />
                                            </div>
                                        </div>
