                                            <div class="col-md-4">
                                                <tvprog-label asp-for="SearchTvChannelTypeId" />
                                            </div>
                                            <div class="col-md-8">
                                                <tvprog-select asp-for="SearchTvChannelTypeId" asp-items="Model.AvailableTvChannelTypes" />
                                            </div>
                                        </div>
