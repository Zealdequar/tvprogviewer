                <tvprog-label asp-for="MinimumUserEnteredPrice" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="MinimumUserEnteredPrice" asp-postfix="@Model.PrimaryStoreCurrencyCode" />
