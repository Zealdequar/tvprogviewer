        </div>
        <div class="form-group row @(Model.ProductEditorSettingsModel.PAngV ? null : "advanced-setting")">
            <div class="col-md-3">
                <tvprog-label asp-for="BasepriceUnitId" />
            </div>
            <div class="col-md-9">
                <tvprog-select asp-for="BasepriceUnitId" asp-items="Model.AvailableBasepriceUnits" />
                <span asp-validation-for="BasepriceUnitId"></span>
            </div>
        </div>
        <div class="form-group row @(Model.ProductEditorSettingsModel.PAngV ? null : "advanced-setting")">
            <div class="col-md-3">
                <tvprog-label asp-for="BasepriceBaseAmount" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="BasepriceBaseAmount" />
                <span asp-validation-for="BasepriceBaseAmount"></span>
